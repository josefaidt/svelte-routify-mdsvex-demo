{
  "name": "svelte-routify",
  "version": "1.0.0",
  "scripts": {
    "start": "sirv public --single",
    "build": "NODE_ENV=production webpack",
    "dev": "run-p dev:webpack dev:routify",
    "dev:webpack": "webpack-dev-server --content-base public",
    "dev:routify": "routify"
  },
  "devDependencies": {
    "@sveltech/routify": "^1.9.9",
    "css-loader": "^2.1.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mdsvex": "^0.8.6",
    "mini-css-extract-plugin": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.1.1",
    "serve": "^11.0.0",
    "style-loader": "^0.23.1",
    "svelte": "^3.0.0",
    "svelte-loader": "2.13.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,svelte,svx,json,html,css}": [
      "prettier --plugin-search-dir=. --write"
    ]
  }
}
